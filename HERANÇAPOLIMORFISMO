package ListaExercicios5;

public class Cachorro extends Animal {
		private String acao;

		public Cachorro(String nome, int idade, boolean som, String acao) 
		{
			super(nome, idade, som);
			this.acao = acao;	
		}

		public String getAcao() {
			return acao;
		}

		public void setAcao(String acao) {
			this.acao = acao;
		}




}
